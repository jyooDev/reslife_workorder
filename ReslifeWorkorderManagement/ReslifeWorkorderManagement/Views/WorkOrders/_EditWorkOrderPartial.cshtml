@model WorkOrderVM

<div class="modal fade" id="editModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Work Order</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Edit" asp-route-id="@ViewData["WorkOrderId"]" method="post">
                    <div class="form-group">
                        <label asp-for="Note" class="form-label"></label>
                        <textarea asp-for="Note" class="form-control"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn green-btn" data-save="form">Save</button>
                <button type="button" class="btn red-btn" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
